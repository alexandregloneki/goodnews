<script>
	jQuery(document).ready(function(){
		jQuery('.rules_show').hide();
		jQuery('.rules').click(function(){
			
			if (jQuery('#'+jQuery(this).attr('shw')).css('display')=='none'){
				jQuery('#'+jQuery(this).attr('shw')).slideDown('slow');	
				
			}else{
				jQuery('#'+jQuery(this).attr('shw')).slideUp('slow');
				
			}
			
		});
	});
</script>

