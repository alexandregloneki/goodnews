<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:class=>"box login", :style=>"height:330px"}) do |f| %>
	<label>Login</label>
	
	<fieldset class="boxBody">
	  <% if flash[:alert] %>
  		<label style="color:red"><%=flash[:alert]%></label>
  		<%end%>
	  <label>E-mail</label>
	  <%= f.email_field :email, :tabindex=>"1", :required=>true %>
	  <label><%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
		  <%= link_to "Esqueceu a senha?", new_password_path(resource_name),:class=>"rLink", :tabindex=>"2" %><br />
		  <%= link_to "Criar Conta", new_registration_path(resource_name), :class=>"rLink" %>
		<% end -%>Senha</label>
	  <%= f.password_field :password, :tabindex=>"2", :required=>true %>
	</fieldset>
	<footer>
	  <label><input type="checkbox" tabindex="3">Continuar logado</label>
	  <input type="submit" class="btnLogin" value="Login" tabindex="4">
	</footer>
	
<% end %>
