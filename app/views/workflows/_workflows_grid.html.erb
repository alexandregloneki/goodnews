<%= grid(@workflows_grid, :upper_pagination_panel => true) do |g|

  g.column :name=>'Nome',:attribute=>'name', :in_csv => true do |workflow|
    workflow.name
  end

  g.column :name=>'Status', :attribute=>'status_id',:in_csv => true, :custom_filter=>@status do |workflow|
    workflow.status.name
  end
  
  g.column  :name=>'Data Inicial', :attribute=>'date_start', :in_csv => true do |workflow|
    I18n.l(workflow.date_start)
  end
  
  g.column  :name=>'Data Final', :attribute=>'date_finish', :in_csv => true do |workflow|
    I18n.l(workflow.date_finish)
  end

  g.column :html=>{:class=>"last links"}, :in_csv => false do |workflow|
  
    "<ul class='inline'><li class='icon show_member_link' rel='tooltip' title='Mostrar'>".html_safe+
    	"<a href='/workflows/#{workflow.id}' class='pjax'>".html_safe+
          "<i class='icon-info-sign'></i>".html_safe+
          "<span style='display:none'>Show</span>".html_safe+
        "</a>".html_safe+
      "</li>".html_safe+
    
      "<li class='icon edit_member_link ' rel='tooltip' title='Editar'>".html_safe+
        "<a href='/workflows/#{workflow.id}/edit' class='pjax'>".html_safe+
          "<i class='icon-pencil'></i>".html_safe+
          "<span style='display:none'>Edit</span>".html_safe+
        "</a>".html_safe+
      "</li>".html_safe+
    
      "<li class='icon delete_member_link ' rel='tooltip' title='Excluir'>".html_safe+
        "<a rel='nofollow' data-method='delete' data-confirm='Deseja realmente excluir?' href='/workflows/#{workflow.id}'>".html_safe+
          "<i class='icon-remove'></i>".html_safe+
          "<span style='display:none'>Delete</span>".html_safe+
        "</a>".html_safe+
      "</li>".html_safe+
    	"<li class='icon history_show_member_link' rel='tooltip' title='Comunicacao'>".html_safe+
        "<a href='/workflows/send_out/#{workflow.id}' class='pjax'>".html_safe+
          "<i class='icon-globe'></i>".html_safe+
          "<span style='display:none'>Comunicacao</span>".html_safe+
        "</a>".html_safe+
      "</li>".html_safe+
      "<li class='icon edit_member_link ' rel='tooltip' title='Dados Api'>".html_safe+
        "<a href='/workflows/api_data/#{workflow.id}' class='pjax'>".html_safe+
          "<i class='icon-list-alt'></i>".html_safe+
          "<span style='display:none'>Edit</span>".html_safe+
        "</a>".html_safe+
      "</li>".html_safe+
	"</ul>".html_safe
  end
end -%>